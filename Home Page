    @Override
    public void actionPerformed(ActionEvent e) {
        if(e.getSource() == button){
            new AddBook();
        }
        else if (e.getSource() == button1){
            new ReturnBook();
        }
        else if (e.getSource() == button2){
            new Searchbook();
        }
        else if(e.getSource() == button3){
            new StudentRegister();
        }
    }
}
